# Jellynouncer Environment Configuration
# Copy this file to .env and fill in your values

# Required: Jellyfin Configuration
JELLYFIN_SERVER_URL=http://jellyfin:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here
JELLYFIN_USER_ID=your_jellyfin_user_id_here

# Required: Discord Webhook (at least one)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Optional: Content-specific Discord webhooks
DISCORD_WEBHOOK_URL_MOVIES=https://discord.com/api/webhooks/movies/webhook
DISCORD_WEBHOOK_URL_TV=https://discord.com/api/webhooks/tv/webhook
DISCORD_WEBHOOK_URL_MUSIC=https://discord.com/api/webhooks/music/webhook

# Optional: External API keys for enhanced metadata
OMDB_API_KEY=your_omdb_api_key
TMDB_API_KEY=your_tmdb_api_key
TVDB_API_KEY=your_tvdb_api_key

# Optional: Web interface security
JWT_SECRET_KEY=your-random-secret-key-here

# Optional: System Configuration
PUID=1000
PGID=1000
TZ=America/New_York
LOG_LEVEL=INFO
JELLYNOUNCER_RUN_MODE=all

# Optional: Advanced Configuration
# Uncomment and modify as needed
# DELETION_DELAY_SECONDS=30
# CACHE_DURATION_HOURS=24
# MAX_NOTIFICATIONS_PER_BATCH=20
# BATCH_DELAY_MINUTES=5